<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaTransacciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransaccion1"
    >
<RelativeLayout
    android:layout_width="390dp"
    android:layout_height="150dp"
    android:layout_marginBottom="40dp"
    android:layout_marginTop="1dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    >
    <TextView
        android:id="@+id/TextTituloTransaccion1"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center|center_horizontal"
        android:text="@string/TituloTransaccion"
        android:textSize="36sp"></TextView>
</RelativeLayout>
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="100dp"
        android:scrollbars="vertical" >


    <android.support.v7.widget.CardView
        android:id="@+id/CardViewTransacionesMaestro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:innerRadius="10dp"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="30dp"

        android:layout_margin="1dp"
        >
        <!--Put form controls here-->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TextTituloTransaccion"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center|center_horizontal"
                android:text=""
                android:textSize="36sp"></TextView>

            <TextView
                android:id="@+id/TextViewFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/Fechalabel"
                android:textSize="10pt"
                android:visibility="invisible"></TextView>
            <View
                android:id="@+id/Separador1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_separador"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_fecha_section" />
            <Button
                android:id="@+id/btn_set_date_today"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_set_date_yesterday"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_date_button"
                android:text="Hoy"
                android:textColor="@drawable/button_text"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_set_date_yesterday"
                android:layout_width="66dp"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/btn_set_date_today"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_date_button"
                android:gravity="center|center_horizontal"
                android:text="Ayer"

                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_set_date_others"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_date_button"
                android:text="Otro" />

            <EditText
                android:id="@+id/EditTextFecha"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:hint="@string/Fecha"
                android:inputType="number|numberDecimal"
                android:visibility="invisible"></EditText>



        </LinearLayout>
            <View
                android:id="@+id/Separador2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_separador"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_category_section" />
            <Button
                android:id="@+id/btnCategoria"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:drawableLeft="@drawable/ic_dollar_btn"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                android:onClick="onClick"
                android:text="Categoria" />

            <Spinner
                android:id="@+id/SpinnerCategorias"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"></Spinner>
        </LinearLayout>
            <View
                android:id="@+id/Separador3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_separador"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_amount_section" />


            <EditText
                android:id="@+id/EditTextMonto"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:hint="@string/montovalue"
                android:inputType="numberDecimal"></EditText>
        </LinearLayout>
            <View
                android:id="@+id/Separador4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_separador"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_account_section" />
            <Spinner
                android:id="@+id/SpinnerCuentas"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textSize="12pt"
                android:layout_marginBottom="10dp"></Spinner>
        </LinearLayout>
            <View
                android:id="@+id/Separador5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/shape_separador"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBillete1"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_money_button"
                android:drawableRight="@drawable/ic_dollar_btn"
                android:textAllCaps="false"
                android:layout_marginLeft="60dp"
                android:onClick="onClick"
                android:text="100" />
            <Button
                android:id="@+id/btnBillete2"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_money_button"
                android:drawableRight="@drawable/ic_dollar_btn"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:onClick="onClick"
                android:text="100" />
            <Button
                android:id="@+id/btnBillete3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_money_button"
                android:drawableRight="@drawable/ic_dollar_btn"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:onClick="onClick"
                android:text="100" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="                 " />

        </LinearLayout>


            <Button
                android:id="@+id/ButtonSendTransaction"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:onClick="registrarUsuario"
                android:layout_gravity="center"
                android:text="@string/transactionbutton"></Button>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>